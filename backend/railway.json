{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "dockerfilePath": "./backend/Dockerfile",
      "rootDir": "./backend",
      "dockerContext": "./backend"
    },
    {
      "name": "frontend",
      "dockerfilePath": "./frontend/Dockerfile",
      "rootDir": "./frontend",
      "dockerContext": "./frontend",
      "dockerfileBuildArgs": {
        "VITE_API_URL": "${{ services.backend.url }}/api"
      }
    }
  ]
}
